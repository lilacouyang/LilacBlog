// Custom styles.

// 背景颜色
.site-meta {
    background: url("/images/header-bk.jpg");
}

// 顶部条颜色高度
// background: #ec7571;
.headband {
    height: 3px;
    background-image: linear-gradient(90deg, #F79533 0%, #F37055 15%, #EF4E7B 30%, #A166AB 44%, #5073B8 58%, #1098AD 72%, #07B39B 86%, #6DBA82 100%);
}

// Lilac 字体设置
.site-title {
    font-size: 28px;
    font-weight: bold;
    font-family: 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
}

// 归档页面，元素显示调整
.posts-collapse .post-meta {
    position: absolute;
    font-size: 12px;
    left: 20px;
    top: 2px;
}

.posts-collapse .post-title {
    margin-left: 80px;
    font-size: 16px;
    font-weight: normal;
    line-height: inherit;
}

.post-body p a{
 color: #0593d3;
 border-bottom: none;
 &:hover {
   color: #ff106c;
   text-decoration: underline;
 }
}

header{ width: 80% !important; }
header.post-header {
  width: auto !important;
}
.container .main-inner { width: 80%; }
.content-wrap { width: calc(100% - 260px); }

.header {
  +tablet() {
    width: auto !important;
  }
  +mobile() {
    width: auto !important;
  }
}

.container .main-inner {
  +tablet() {
    width: auto !important;
  }
  +mobile() {
    width: auto !important;
  }
}

.content-wrap {
  +tablet() {
    width: 100% !important;
  }
  +mobile() {
    width: 100% !important;
  }
}
